{
  "name": "be-vendure",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backends/be-vendure/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "build-worker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build --config apps/backends/be-vendure/webpack.worker.config.js",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "be-vendure:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "be-vendure:build:development"
        },
        "production": {
          "buildTarget": "be-vendure:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backends/be-vendure/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "populate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node --project apps/backends/be-vendure/tsconfig.app.json apps/backends/be-vendure/src/populate.ts"
      }
    },
    "worker": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run be-vendure:build-worker:development",
          "node dist/apps/backends/be-vendure/main-worker.js"
        ],
        "parallel": false
      },
      "configurations": {
        "development": {
          "commands": [
            "nx run be-vendure:build-worker:development",
            "node dist/apps/backends/be-vendure/main-worker.js"
          ],
          "parallel": false
        },
        "production": {
          "commands": [
            "nx run be-vendure:build-worker:production",
            "node dist/apps/backends/be-vendure/main-worker.js"
          ],
          "parallel": false
        }
      }
    }
  }
}
