{
  "name": "client-shell",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/clients/client-shell/src",
  "tags": ["scope:client-shell", "scope:client"],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/clients/client-shell/browser",
        "index": "apps/clients/client-shell/src/index.html",
        "main": "apps/clients/client-shell/src/main.ts",
        "polyfills": [],
        "tsConfig": "apps/clients/client-shell/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/clients/client-shell/public"
          }
        ],
        "styles": [
          "apps/clients/client-shell/src/styles.scss",
          "libs/client-core/src/lib/styles/themes.scss"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/clients/client-shell/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/clients/client-shell/webpack.prod.config.ts"
          },
          "optimization": {
            "scripts": true,
            "styles": {
              "minify": true,
              "inlineCritical": true
            },
            "fonts": {
              "inline": true
            }
          },
          "buildOptimizer": true,
          "aot": true,
          "sourceMap": false,
          "extractLicenses": true,
          "namedChunks": false,
          "vendorChunk": false,
          "commonChunk": true,
          "subresourceIntegrity": true,
          "fileReplacements": [
            {
              "replace": "apps/clients/client-shell/src/environments/environment.ts",
              "with":    "apps/clients/client-shell/src/environments/environment.browser.prod.ts"
            },
            {
              "replace": "apps/clients/client-shell/module-federation.config.ts",
              "with":    "apps/clients/client-shell/module-federation.config.prod.ts"
            }
          ]
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4200,
        "host": "0.0.0.0",
        "publicHost": "http://localhost:4200",
        "devRemotes": ["client_products", "client_product_details"]
      },
      "configurations": {
        "production": {
          "buildTarget": "client-shell:build:production"
        },
        "development": {
          "proxyConfig": "apps/clients/client-shell/proxy.conf.json",
          "buildTarget": "client-shell:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "client-shell:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/clients/client-shell/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "client-shell:build",
        "port": 4200,
        "spa": true
      }
    },
    "server": {
      "dependsOn": ["build"],
      "executor": "@nx/angular:webpack-server",
      "options": {
        "outputPath": "dist/apps/clients/client-shell/server",
        "main": "apps/clients/client-shell/src/server.ts",
        "tsConfig": "apps/clients/client-shell/tsconfig.server.json",
        "inlineStyleLanguage": "scss",
        "customWebpackConfig": {
          "path": "apps/clients/client-shell/webpack.server.config.ts"
        },
        "fileReplacements": [
          {
            "replace": "apps/clients/client-shell/src/environments/environment.ts",
            "with":    "apps/clients/client-shell/src/environments/environment.server.ts"
          }
        ]
      },
      "configurations": {
        "production": {
          "customWebpackConfig": {
            "path": "apps/clients/client-shell/webpack.server.config.prod.ts"
          },
          "outputHashing": "media",
          "optimization": true,
          "buildOptimizer": true,
          "sourceMap": false,
          "fileReplacements": [
            {
              "replace": "apps/clients/client-shell/src/environments/environment.ts",
              "with":    "apps/clients/client-shell/src/environments/environment.server.prod.ts"
            },
            {
              "replace": "apps/clients/client-shell/module-federation.config.ts",
              "with":    "apps/clients/client-shell/module-federation.config.prod.ts"
            }
          ]
      },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-ssr": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-ssr",
      "configurations": {
        "development": {
          "browserTarget": "client-shell:build:development",
          "serverTarget": "client-shell:server:development",
          "verbose": true,
          "progress": true
        },
        "production": {
          "browserTarget": "client-shell:build:production",
          "serverTarget": "client-shell:server:production"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200,
        "host": "0.0.0.0",
        "publicHost":"localhost",
        "progress": true,
        "verbose": true,
        "devRemotes": ["client_products", "client_product_details"]
      }
    },
    "prerender": {
      "executor": "@angular-devkit/build-angular:prerender",
      "options": {
        "routes": ["/"]
      },
      "configurations": {
        "development": {
          "browserTarget": "client-shell:build:development",
          "serverTarget": "client-shell:server:development"
        },
        "production": {
          "browserTarget": "client-shell:build:production",
          "serverTarget": "client-shell:server:production"
        }
      },
      "defaultConfiguration": "production"
    }
  }
}
